<%- include('partials/head') %>
</head>

<body data-spy="scroll" data-target=".fixed-top">

    <%- include('partials/preloader') %>

    <%- include('partials/navbar') %>
    <header id="header" class="ex-header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6 col-md-12  col-sm-12">
                    <div class="jumbotron">
                        <div class="form-check  text-right">
                            <h3 id="res-title"><%= poll.title %></h3>
                            <hr>
                            <% poll.options.forEach(function(option) { %>
                            <div id="poll-option">
                                <h4 class="res-name"><%= option.name %></h4>
                                <h4 id="voteCount"><%= option.voteCount %></h4>
                                <hr class="text-center progress-hr">
                                <div class="text-center">
                                    <div class="progress center-block">
                                        <div class="progress-bar progress-bar-striped progress-bar-animated"
                                            style=" width: <%= option.percentage %>%;" role="progressbar">
                                            <strong class="progress-text"><%= option.percentage %>%</strong></div>
                                    </div>
                                </div>
                            </div>
                            <hr>
                            <% } );%>
                        </div>
                        <div id="toast"></div>
                        <h3 id="vote-count" class="mt-4 mb-4 text-right">اجمالي الاصوات :
                            <%= poll.total %></h3>
                        <hr class="result-footer">
                        <div class="mt-3">
                            <button id="goVote-button" type="button" class="btn-solid-reg">تصويت</button>
                            <button id="copy-button" type="button" class="btn-solid-reg">نسخ الرابط</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header> <!-- end of ex-header -->
    <%- include('partials/footer') %>

    <script src="/js/res.js"></script>
</body>

</html>