<%- include('partials/header') %>
</head>
<header id="header" class="ex-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 col-md-12  col-sm-12">
                <div class="jumbotron">
                    <div class="form-check  text-right">
                        <h3 id="res-title"><%= poll_values.title %></h3>
                        <hr>
                        <% poll_values.poll_list.forEach( function(item) { %>
                        <div id="poll-item">
                            <h4><%= item.name %></h4>
                            <h4 id="poll-item-numberVote"><%= item.numberVote %></h4>
                            <hr class="text-center progress-hr">
                            <div class="text-center">
                                <div class="progress center-block">
                                    <div class="progress-bar progress-bar-striped progress-bar-animated"
                                        style=" width: <%= item.percentage %>%;" role="progressbar">
                                        <strong class="progress-text"><%= item.percentage %>%</strong></div>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <% } );%>
                    </div>
                    <div id="toast"></div>
                    <h3 class="mt-5 mb-5 text-right">اجمالي الاصوات : <span><%= poll_values.total %></span></h3>
                    <div>
                        <button id="goVote-button" type="button" class="btn-solid-reg">تصويت</button>
                        <button id="copy-button" type="button" class="btn-solid-reg">نسخ الرابط</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header> <!-- end of ex-header -->
<%- include('partials/footer') %>
<script src="/js/res.js"></script>