<%- include('partials/header') %>
<link rel="stylesheet" href="/stylesheets/vote.css">
<title>التصويت</title>

</head>

<body>


    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample08"
            aria-controls="navbarsExample08" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-md-center" id="navbarsExample08">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#">تسجيل الدخول</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="#">التسجيل</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="#">الرئيسية</a>
                </li>
            </ul>
        </div>
    </nav>


    <div class="container">
        <div class="jumbotron">
            <div id="select-alert" class="alert alert-primary hidden text-center" role="alert">
                الرجاء اختيار صوت لتصويت
            </div>
            <div class="form-check  text-right">
                <h3 id="title"><%= poll_values.title %></h3>
                <% poll_values.poll_list.forEach( function(item) { %>
                <h4><label for="<%= item.id %>" class="form-check-label"><%= item.name %></label>
                    <input type="radio" class="form-check-input custom-radio" name="itemList" id="<%= item.id %>">
                </h4>
                <% } );%>

            </div>

            <button id="submit-vote" type="button" class="btn btn-dark btn-lg">تصويت</button>
        </div>
    </div>

    <script src="/javascripts/vote.js"></script>
    <%- include('partials/footer') %>