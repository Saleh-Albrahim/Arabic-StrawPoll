<%- include('partials/header') %>
<link rel="stylesheet" href="/stylesheets/res.css">
<title>التصويت</title>

</head>

<body>


    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample08"
            aria-controls="navbarsExample08" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-md-center" id="navbarsExample08">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#">تسجيل الدخول</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="#">التسجيل</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/">الرئيسية</a>
                </li>
            </ul>
        </div>
    </nav>


    <div class="container">
        <div class="jumbotron">
            <div class="form-check  text-right">
                <h3 id="title"><%= poll_values.title %></h3>
                <% poll_values.poll_list.forEach( function(item) { %>
                <div id="poll-item">
                    <h4><%= item.name %></h4>
                    <h4 id="poll-item-numberVote"><%= item.numberVote %></h4>

                </div>
                <hr>
                <% } );%>
                <button id="copy" type="button" class="btn btn-dark btn-lg">نسخ الرابط</button>
            </div>

        </div>
    </div>

    <script src="/javascripts/res.js"></script>
    <%- include('partials/footer') %>