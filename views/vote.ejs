<%- include('partials/header') %>
</head>
<header id="header" class="ex-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 col-md-12 col-sm-12">
                <div class="jumbotron">
                    <div id="select-alert" class="alert alert-danger hidden text-center" role="alert">
                        الرجاء اختيار صوت لتصويت
                    </div>
                    <div id="vote-alert" class="alert alert-danger hidden text-center" role="alert">
                        لا يمكن التصويت اكثر من مره
                    </div>
                    <div class="form-check  text-right">
                        <h3 id="vote-title"><%= poll_values.title %></h3>
                        <hr>
                        <% poll_values.poll_list.forEach( function(item) { %>
                        <h4><label for="<%= item.id %>" class="form-check-label"><%= item.name %></label>
                            <input type="radio" class="form-check-input custom-radio" name="itemList"
                                id="<%= item.id %>">
                        </h4>
                        <hr>
                        <% });%>
                    </div>
                    <div id="toast"></div>
                    <div class="mt-5">
                        <form id="submit-vote" action="/vote" method="post">
                            <input type="hidden" name="pollID" value="<%=poll_values._id%>">
                            <input type="submit" id="vote-button" class="btn-solid-reg" value="تصويت">
                        </form>
                        <button id="result-button" type="button" class="btn-solid-reg">النتائج</button>
                        <div>
                        </div>
                    </div>
                </div>
</header> <!-- end of ex-header -->
<%- include('partials/footer') %>
<script src="/js/vote.js"></script>